<h1><%= @user.name %></h1>
<div class="panel panel-default">
	<div class="panel-body">
		<ul>
			<li><strong>Name:</strong> <%= @user.name %></li>
			<li><strong>Provider:</strong> <%= @user.provider %></li>
			<li><strong>uID:</strong> <%= @user.uid %></li>
			<li><strong>URL:</strong> <%= link_to @user.url, @user.url %></li>
		</ul>
		<hr/>
		<h3>Replied topics</h3>
		<table class="table table-hover table-responsive">
			<thead>
				<tr>
					<th>#</th>
					<th>Topic</th>
					<th>messages</th>
					<th>created at</th>
				</tr>
			</thead>
			<tbody>
				<% @replied_topics.each do |t| %>
				<tr>
					<td><%= t.id %></td>
					<td><%= link_to t.name, t.url, style:"display:block"%></td>
					<td><%= t.posts.count %></td>
					<td><%= t.created_at %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>
